<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |e| %>
      <%= js add_gritter(e, title: 'Sohel Patel Portfolio', sticky: false) %>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class='field'>
    <%= form.label :topic %>
    <%= form.text_area :topic %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
