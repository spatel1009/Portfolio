<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <div class="card-img-top">
      <%= image_tag portfolio_item.thumb_image.url, width: 288, height: 300 unless portfolio_item.thumb_image.nil? %>
    </div>
    <div class="card-body">
      <p class="card-text">
      <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
      </p>
    </div>
  </div>
</div>
